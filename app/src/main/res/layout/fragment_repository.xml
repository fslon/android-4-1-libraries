<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <TextView
        android:id="@+id/tv_repository_name_is"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_name_repository_is"
        android:text="@string/name_of_repository_is"
        android:textSize="@dimen/text_size_repository_fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_repository_name_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_name_of_repository"
        android:text="@string/null_string"
        android:textSize="@dimen/text_size_repository_fragment"
        app:layout_constraintStart_toEndOf="@id/tv_repository_name_is"
        app:layout_constraintTop_toTopOf="@id/tv_repository_name_is" />

    <TextView
        android:id="@+id/tv_number_of_forks_is"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/forks_number_is"
        android:textSize="@dimen/text_size_repository_fragment"
        app:layout_constraintStart_toStartOf="@id/tv_repository_name_is"
        app:layout_constraintTop_toBottomOf="@id/tv_repository_name_is" />

    <TextView
        android:id="@+id/tv_number_of_forks_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_name_of_repository"
        android:text="@string/null_string"
        android:textSize="@dimen/text_size_repository_fragment"
        app:layout_constraintStart_toEndOf="@id/tv_number_of_forks_is"
        app:layout_constraintTop_toTopOf="@id/tv_number_of_forks_is" />


</androidx.constraintlayout.widget.ConstraintLayout>